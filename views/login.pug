extends base
block vars
    - var title = "Login"
block body
    h2  Login Page
    form(method="post")
        div(class="form-group")
            label Email:
            input(type="email" name="email" required=true)
        div(class="form-group")
            label Password:
            input(type="password" name="password" required=true)
        div(class="form-group")
            input(type="submit")
    if (error)
        p=error